<p id="notice"><%# notice %></p>

<table>
	<tr>
		<th>ID</th>
		<th>Date</th>
		<th>Player 1</th>
		<th>Score</th>
		<th>Player 2</th>

	</tr>
	<tr>
  		<td><%= @match.id %></td>
  		<td><% if @match.created_at.blank? %>
				N/A
			<% else %>
				<%= @match.created_at.strftime("%d %b '%y") %>
			<% end %>
		</td>
		<td><%= User.find(@result.first["user_id"]).name %>
  		<td><%= @result.first["score"] %> - <%= @result.last["score"] %></td>
		<td><%= User.find(@result.last["user_id"]).name %>
	</tr>
</table>

<%= link_to 'Edit', edit_match_path(@match) %> | <%= button_to "Delete", { :action => "destroy", :id => @match.id },
            :confirm => "Are you sure?", :method => :delete %> | 
<%= link_to 'Back', matches_path %>
